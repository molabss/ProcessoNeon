<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.processoNeon">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".system.ApplicationInit"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.SendMoneyActivity"
            android:label="@string/title_activity_send_money"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".view.ValuePopupActivity"
            android:label="@string/title_activity_value_popup"
            android:theme="@style/Theme.PopupDialog" />
        <activity
            android:name=".view.ShowHistoryActivity"
            android:label="@string/title_activity_show_history"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/Theme.AppCompat.Light"></activity>
    </application>

</manifest>